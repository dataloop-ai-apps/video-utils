{
  "displayName": "[Video Utils] - Splitting",
  "name": "video-utils-splitting",
  "description": "Video Utils - Splitting is a collection of functions for video manipulation. The package includes functions for video splitting, video to videos splitting, and smart subsampling.",
  "version": "1.1.3",
  "attributes": {
    "Provider": "Dataloop",
    "Category": "Application",
    "Media Type": [
      "Video",
      "Image"
    ],
    "Application Type": [
      "Pipeline Node"
    ],
    "License": "Apache 2.0"
  },
  "codebase": {
    "type": "git",
    "gitUrl": "https://github.com/dataloop-ai-apps/video-utils.git",
    "gitTag": "1.1.3"
  },
  "scope": "public",
  "components": {
    "pipelineNodes": [
      {
        "scope": "node",
        "name": "video-to-frames",
        "displayName": "Video to Frames",
        "description": "Split video into frames by number of splits, time interval, or frames interval.",
        "invoke": {
          "type": "function",
          "namespace": "video-to-frames.video-to-frames.video_to_frames"
        },
        "categories": [
          "video-utils"
        ],
        "configuration": {
          "fields": [
            {
              "name": "split_type",
              "title": "Split Type",
              "props": {
                "type": "string",
                "required": true,
                "options": [
                  {
                    "label": "Split by Number of Splits",
                    "value": "num_splits"
                  },
                  {
                    "label": "Split by Time Interval",
                    "value": "time_interval"
                  },
                  {
                    "label": "Split by Frames Interval",
                    "value": "frames_interval"
                  }
                ],
                "default": "frames_interval"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-select"
            },
            {
              "name": "splitter_arg",
              "title": "Number of Splits/Time Interval/Frames Interval",
              "props": {
                "title": true,
                "type": "number",
                "required": true,
                "placeholder": "Insert splitter argument",
                "default": 1
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "output_dir",
              "title": "Dataset Output Directory",
              "props": {
                "title": true,
                "type": "string",
                "default": "output",
                "required": true,
                "placeholder": "Insert output directory"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            }
          ]
        }
      },
      {
        "scope": "node",
        "name": "smart-frames-splitting",
        "displayName": "Smart Frames Splitting",
        "description": "Split video into frames by structural or embedding similarity.",
        "invoke": {
          "type": "function",
          "namespace": "video-to-frames.video-to-frames.video_to_frames"
        },
        "categories": [
          "video-utils"
        ],
        "configuration": {
          "fields": [
            {
              "name": "output_dir",
              "title": "Dataset Output Directory",
              "props": {
                "title": true,
                "type": "string",
                "default": "output",
                "required": true,
                "placeholder": "Insert output directory"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "split_type",
              "title": "Split Type",
              "props": {
                "type": "string",
                "required": true,
                "options": [
                  {
                    "label": "Structural Similarity",
                    "value": "structural_similarity_sampling"
                  },
                  {
                    "label": "Embedding Similarity",
                    "value": "embedding_similarity_sampling"
                  }
                ],
                "default": "embedding_similarity_sampling"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-select"
            },
            {
              "name": "min_interval",
              "title": "The minimum interval between frames to be considered for splitting.",
              "props": {
                "title": true,
                "type": "number",
                "default": 10,
                "min": 1,
                "step": 1,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "window_size",
              "title": "The size of the sliding window used (only relevant for structural similarity).",
              "props": {
                "title": true,
                "type": "number",
                "default": 7,
                "max": 25,
                "min": 3,
                "step": 2,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-slider"
            },
            {
              "name": "threshold",
              "title": "The threshold for the similarity between frames.",
              "props": {
                "title": true,
                "type": "number",
                "default": 0.13,
                "max": 1,
                "min": 0,
                "step": 0.01
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-slider"
            }
          ]
        }
      },
      {
        "scope": "node",
        "name": "video-to-videos",
        "displayName": "Video to Videos",
        "description": "Split video into multiple videos by number of splits, time interval, or frames interval.",
        "invoke": {
          "type": "function",
          "namespace": "video-to-videos.video-to-videos.video_to_videos"
        },
        "categories": [
          "video-utils"
        ],
        "configuration": {
          "fields": [
            {
              "name": "split_type",
              "title": "Split Type",
              "props": {
                "type": "string",
                "required": true,
                "options": [
                  {
                    "label": "Split by number of frames per sub video",
                    "value": "num_frames"
                  },
                  {
                    "label": "Split by number of sub videos",
                    "value": "num_splits"
                  },
                  {
                    "label": "Split by sub video length in seconds",
                    "value": "out_length"
                  }
                ],
                "default": "num_splits"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-select"
            },
            {
              "name": "output_dir",
              "title": "Output Directory",
              "props": {
                "title": true,
                "type": "string",
                "default": "output",
                "required": true,
                "placeholder": "Insert output directory"
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "splitter_arg",
              "title": "Number of Splits/Time Interval/Frames Interval",
              "props": {
                "title": true,
                "type": "number",
                "default": 2,
                "required": true
              },
              "rules": [
                {
                  "type": "required",
                  "effect": "error"
                }
              ],
              "widget": "dl-input"
            },
            {
              "name": "n_overlap",
              "title": "Number of overlapping frames between consecutive sub-videos",
              "props": {
                "title": true,
                "type": "number",
                "default": 0,
                "min": 0,
                "step": 1,
                "required": false
              },
              "widget": "dl-input"
            }
          ]
        }
      }
    ],
    "modules": [
      {
        "name": "video-to-frames",
        "entryPoint": "splitting/video_to_frames.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "video_to_frames",
            "description": "video splitting tool",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "displayIcon": "qa-sampling",
            "displayName": "Video to Frames Split"
          }
        ]
      },
      {
        "name": "video-to-videos",
        "entryPoint": "splitting/video_to_videos.py",
        "className": "ServiceRunner",
        "initInputs": [],
        "functions": [
          {
            "name": "video_to_videos",
            "description": "video to videos splitting tool",
            "input": [
              {
                "type": "Item",
                "name": "item"
              }
            ],
            "output": [
              {
                "type": "Item[]",
                "name": "items"
              }
            ],
            "displayIcon": "qa-sampling",
            "displayName": "Video To Videos Split"
          }
        ]
      }
    ],
    "services": [
      {
        "name": "video-to-frames",
        "moduleName": "video-to-frames",
        "runtime": {
          "podType": "regular-xs",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/video-utils:0.0.1",
          "numReplicas": 1,
          "concurrency": 10,
          "pyPackages": {},
          "singleAgent": false,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          },
          "preemptible": false
        },
        "maxAttempts": 3,
        "executionTimeout": 172800,
        "drainTime": 600,
        "onReset": "failed",
        "runExecutionAsProcess": false,
        "operation": "none"
      },
      {
        "name": "video-to-videos",
        "moduleName": "video-to-videos",
        "runtime": {
          "podType": "regular-xs",
          "runnerImage": "gcr.io/viewo-g/piper/agent/runner/apps/video-utils:0.0.1",
          "numReplicas": 1,
          "concurrency": 10,
          "pyPackages": {},
          "singleAgent": false,
          "autoscaler": {
            "type": "rabbitmq",
            "minReplicas": 0,
            "maxReplicas": 2,
            "queueLength": 10
          },
          "preemptible": false
        },
        "maxAttempts": 3,
        "executionTimeout": 172800,
        "drainTime": 600,
        "onReset": "failed",
        "runExecutionAsProcess": false,
        "operation": "none"
      }
    ]
  }
}
